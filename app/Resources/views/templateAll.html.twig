                <footer>
                    <div class="row">
                        <div class="col-lg-12">
                            <p>ICEA &copy; LQNL 2015</p>
                        </div>
                    </div>
                </footer>

            </div>
            <!-- /.container -->
        {% endblock %}


        {% block javascripts %}
            <!-- script references -->
            <script src="{{asset('bundles/autenticacao/js/jquery.js')}}" type="text/javascript"></script>
            <script src="{{asset('bundles/autenticacao/js/bootstrap.min.js')}}" type="text/javascript"></script>

            {% block scriptsextra %}
            {%endblock%}
        {% endblock %}
