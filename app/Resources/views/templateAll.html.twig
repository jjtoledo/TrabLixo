                {#                <br/><br/><br/><br/>#}
            </div>
            {% block menu %}
                <div class="col-md-3">
                    <p class="lead">Menu</p>
                    <div class="list-group">
                        <a class="list-group-item" href="{{path('home')}}">Início</a>
                        <a href="{{ path('usuarios_show', { 'id': usuario.id }) }}" class="list-group-item">Meu Perfil</a>
                        <a href="{{ path('solicitacao_new', { 'id': usuario.id }) }}" class="list-group-item">Gerar Solicitacao</a>
