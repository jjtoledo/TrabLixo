{% extends '::templateAll.html.twig' %}

{% block barraNavegacao %}
    <!-- Barra de Navegação -->
    <nav class="navbar navbar-inverse" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <a class="navbar-brand" href="{{path('login')}}">LQNL</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="navbar-inverse">
                <ul class="nav navbar-nav">          
                    <li><a href="#">Informações</a></li>
                    <li><a href="#">Contato</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="{{path('novo_usuario')}}" ><i class="glyphicon glyphicon-new-window"></i> Sou Novo Aqui!</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}

{% block menu %}
{% endblock %}


{% block container %}


    <div class="col-lg-12">
        <img class="img-responsive col-lg-6" src="{{asset('bundles/autenticacao/images/logo.jpg')}}" alt="Logo NTI">
        <form class="form-horizontal col-lg-6" method="POST" action="{{path('login_check')}}">
            <fildset>
                <legend>Login no Sistema</legend>
                <div class="col-lg-9">
                    {#                    <label class="control-label" for="input01">E-mail: </label>#}
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span><input class="form-control input-xlarge" type="text" id="username" name="_username" placeholder="E-MAIL" required="required" value="">
                    </div>
                    <br/>
                </div>
                <div class="col-lg-9">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span><input class="form-control input-xlarge " type="password" id="password" name="_password" placeholder="Senha" required="required">
                    </div>
                </div>
                <div class="col-lg-9">
                    {% if error %}
                        <div>{{ error.message }}</div>
                    {% endif %}
                    {#                    <p class ="help-block">{{erro}}</p>#}
                </div>
                <div class="col-lg-9">
                    <a href="{{path('recuperar_senha')}}" ><i class="glyphicon glyphicon-share"></i> Esqueci a senha!<a/>
                </div>
                <div class="col-lg-9">                    
                    <br/>
                    <button type="submit" class="btn btn-primary">Entrar <i class="glyphicon glyphicon-log-in"></i></button>
                    <button type="reset" class="btn btn-default">Limpar</button>
                </div>
            </fildset>
        </form>

    </div>

{% endblock %}
