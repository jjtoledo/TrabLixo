{% block container %}


    <div class="col-lg-12">
        <div class="col-lg-1"></div>
        <form class="form-horizontal well col-lg-10" method="POST" action="{{path('faleconosco_requisicao')}}">
            <fildset>
                <legend>Entre em Contato</legend>
                <p class="help-block">A equipe do LQNL irá responder através do e-mail informado.</p>
                <div class="col-lg-12">
                    <label class="control-label" for="input01">Nome: </label>
                    <div class="controls">
                        <input class="form-control input-xlarge" type="text" id="nome" name="nome" placeholder="Nome Completo" required="required">
                    </div>
                </div>
                <div class="col-lg-12">
                    <label class="control-label" for="input02">E-mail: </label>
                    <div class="controls">
                        <input class="form-control input-xlarge " type="email" id="email" name="email" placeholder="E-mail" required="required">
                    </div>
                </div>
                <div class="col-lg-3">
                    <label class="control-label" for="input02">Assunto: </label>
                    <div class="controls">
                        <select  class="form-control" id="email" name="assunto" placeholder="E-mail" required="required">
                            <option></option>
                            <option value="Duvida">Dúvida</option>
                            <option value="Sugestoes">Sugestões</option>
                            <option value="Reclamacoes">Reclamações</option>
                            <option value="Problemas">Problemas</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-12">
                    <label class="control-label" for="input02">Mensagem: </label>
                    <div class="controls">
                        <textarea name="mensagem" class="form-control" rows="10" required="required" placeholder="Descreva aqui o motivo do contato, suas dúvidas, informações que deseja obter, entre outros."></textarea>
                        {#                        <p class="help-block">Descreva aqui o motivo do contato, suas dúvidas, informações que deseja obter, entre outros.</p>#}
                    </div>
                </div>
                <div class="col-lg-3">                    
                    <br/>
                    <button type="submit" class="btn btn-primary">Enviar</button>
                    <button type="reset" class="btn btn-default">Limpar</button>
                </div>

            </fildset>
        </form>

    </div>

{% endblock %}
