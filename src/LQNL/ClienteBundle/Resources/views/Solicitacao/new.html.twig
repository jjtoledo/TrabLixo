{% extends '::templateAll.html.twig' %}

{% block stylessheetsextra %}
    <link href="{{asset('bundles/autenticacao/css/bootstrap-datepicker.min.css')}}" rel="stylesheet" type="text/css">
{%endblock%}

{% block container %}
    <div class='col-lg-9'>
        {#{{ form(form) }}#}
        {{form_start(form, { 'attr': {'class':'form-horizontal well'} })}}
        <fieldset>
            <legend>Cadastro de Solicitacao</legend>
            <div class="col-lg-12">
                <label class="control-label" for="input01">Indique a quantidade <u>em litros</u> de cada tipo de lixo que voce possui: </label>
            </div>
            <div class="col-lg-2">
                <label class="control-label" for="input01">Papel: </label>
                <div class="controls">
                    {{form_widget(form.papel)}}
                    {{form_errors(form.papel)}}
                </div>
            </div>
            <div class="col-lg-2">
                <label class="control-label" for="input01">Metal: </label>
                <div class="controls">
                    {{form_widget(form.metal)}}
                    {{form_errors(form.metal)}}
                </div>
            </div>
            <div class="col-lg-2">
                <label class="control-label" for="input01">Eletronico: </label>
                <div class="controls">
                    {{form_widget(form.eletronico)}}
                    {{form_errors(form.eletronico)}}
                </div>
            </div>
            <div class="col-lg-2">
                <label class="control-label" for="input01">Vidro: </label>
                <div class="controls">
                    {{form_widget(form.vidro)}}
                    {{form_errors(form.vidro)}}
                </div>
            </div>
            <div class="col-lg-2">
                <label class="control-label" for="input01">Plastico: </label>
                <div class="controls">
                    {{form_widget(form.plastico)}}
                    {{form_errors(form.plastico)}}
                </div>
            </div>
            <div class="col-lg-2">
                <label class="control-label" for="input01">Outros: </label>
                <div class="controls">
                    {{form_widget(form.outros)}}
                    {{form_errors(form.outros)}}
                </div>
            </div>
            <div class="col-lg-6">
                <label class="control-label" for="input01">Observacoes: </label>
                <div class="controls">
                    {{form_widget(form.observacoes)}}
                    {{form_errors(form.observacoes)}}
                </div>
            </div>
            <div class="col-lg-6">
                <label class="control-label" for="input01">Disponibilidade: </label>
            </div>
            <div class="col-lg-3">
                <label class="control-label" for="input01">Dias: </label>
                <div class="controls">
                    <div class="input-group date" >
                        <input class="form-control" required="requierd" name="disp1" type="text">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                    </div>
                    <div class="input-group date">
                        <input class="form-control" required="required" name="disp2"  type="text">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                    </div>
                    <div class="input-group date">
                        <input class="form-control" name="disp3"  type="text">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                    </div>
                    {#    <input type="text" class="form-control input-xlarge datepicker" id="disponiblidade1" name="disp1" required="required" date-provide="datepicker" maxlength="10" OnKeyUp="mascaraData(this);"/>
                        <input type="text" class="form-control input-xlarge datepicker" name="disp2" id="disponibilidade2" required="required" date-provide="datepicker" maxlength="10" OnKeyUp="mascaraData(this);"/>
                        <input type="text" class="form-control input-xlarge datepicker" name="disp3" id="disponibilidade3" date-provide="datepicker" maxlength="10" OnKeyUp="mascaraData(this);"/>#}
                </div>
            </div>
            <div class="col-lg-3">
                <label class="control-label" for="input01">Turno: </label>
                <div class="controls">
                    <select id="turno1" name="turno1" class="form-control input-xlarge" required="required"><option></option><option value="Manhã">Manhã</option><option value="Tarde">Tarde</option><option value="Noite">Noite</option></select>
                    <select id="turno2" name="turno2" class="form-control input-xlarge" required="required"><option></option><option value="Manhã">Manhã</option><option value="Tarde">Tarde</option><option value="Noite">Noite</option></select>
                    <select id="turno3" name="turno3" class="form-control input-xlarge" ><option></option><option value="Manhã">Manhã</option><option value="Tarde">Tarde</option><option value="Noite">Noite</option></select>
                </div>
            </div>
            <hr/>
            <div class="col-lg-12">
                <br/>
                <div class="form-actions">
                    {{ form_widget(form.submit, { 'attr' : {'class': 'btn btn-primary'}, 'label': 'Enviar' }) }}
                    <button type="reset" class="btn btn-warning">Limpar</button>
                </div>
            </div>
        </fieldset>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block scriptsextra %}
    <script src="{{asset('bundles/autenticacao/js/bootstrap-datepicker.min.js')}}" type="text/javascript"></script>
    <script type="text/javascript">
        $(".date").datepicker({
            daysOfWeekDisabled: [0, 6],
            autoclose: true,
            startDate: '+0d',
            endDate: '+15d',
            language: "pt-BR",
            format: 'dd/mm/yyyy',
        });
        $('.date').on('keypress', function () {
            return false;
        });

        function SomenteNumero(e) {
            var tecla = (window.event) ? event.keyCode : e.which;
            if ((tecla > 47 && tecla < 58))
                return true;
            else {
                if (tecla == 8 || tecla == 0)
                    return true;
                else
                    return false;
            }
        }
    </script>
{%endblock%}