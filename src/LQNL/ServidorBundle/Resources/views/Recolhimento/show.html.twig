{% extends '::templateAllAdmin.html.twig' %}

{% block container %}
    <div class="col-lg-9" >
        <h3>
            <a class="btn btn-primary" href="{{ path('recolhimentos') }}">
                <i class="glyphicon glyphicon-arrow-left"></i> Voltar
            </a> 
            Recolhimento ID: {{ entity.id | number_format}}
        </h3>

        <table class="table table-responsive table-hover">
            <tbody>
                <tr>
                    <th width="30%" colspan="1">Data / Hor√°rio</th>
                    <td colspan="3">{{ entity.data|date('d/m/Y H:i:s') }}</td>
                </tr>
                <tr style="background-color: #66afe9"><td colspan="4"></td></tr>
                <tr>
                    <th colspan="4">Quantidade Recolhida (Kg):</th>
                </tr>
                <tr>
                    <th>Papel</th>
                    <td>{{ entity.papel }}</td>
                    <th>Metal</th>
                    <td>{{ entity.metal }}</td>
                </tr>
                <tr>
                    <th>Eletronico</th>
                    <td>{{ entity.eletronico }}</td>
                    <th>Vidro</th>
                    <td>{{ entity.vidro }}</td>
                </tr>
                <tr>
                    <th>Plastico</th>
                    <td>{{ entity.plastico }}</td>
                    <th>Outros</th>
                    <td>{{ entity.outros }}</td>
                </tr>
                <tr style="background-color: #66afe9"><td colspan="4"></td></tr>
                <tr>
                    <th colspan="1">Total</th>
                    <td colspan="3">{{ entity.total }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
