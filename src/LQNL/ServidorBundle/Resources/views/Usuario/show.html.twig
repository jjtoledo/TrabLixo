{% extends '::templateAllAdmin.html.twig' %}

{% block container %}
    <div class="col-md-9">
        <h1>Dados de Perfil</h1>

        <table class="table table-striped table-hover">
            <tbody>
                <tr>
                    <th>Nome Completo</th>
                    <td>{{ usuario.nome }}</td>
                </tr>
                <tr>
                    <th>Telefone</th>
                    <td>{{ usuario.telefone }}</td>
                </tr>
                <tr>
                    <th>E-mail/Login</th>
                    <td>{{ usuario.username }}</td>
                </tr>
                <tr>
                    <th>Endereço:</th>
                    <td>{{ usuario.endereco }}</td>
                </tr>
            </tbody>
        </table>
        <a class="lead btn btn-warning" href="{{ path('administradores_edit', { 'id': usuario.id }) }}"><i class="glyphicon glyphicon-pencil"></i> Editar</a>
        <a type="button" class="lead btn btn-danger" data-toggle="modal" data-target="#exampleModal"><i class="glyphicon glyphicon-trash"></i> Deletar Usuario</a>
        {#        <a class="lead btn btn-danger" href="{{ path('usuarios_delete', { 'id': usuario.id }) }}">Deletar</a>#}

    </div>


    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger" role="alert">
                        <span><h5><b>Atenção!</b><br/>Deseja realmente deletar seu usuário?</h5></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <table>
                        <tr>
                            <td class='col-lg-9'> 
                                <button type="button" class="btn btn-default"     data-dismiss="modal">Nao</button>
                            </td>
                            <td> 
                                {{ form_start(delete_form) }}
                                {{ form_widget(delete_form.submit, { 'attr' : {'class': 'btn'}, 'label': 'Sim, desejo deletar' }) }}
                                {{ form_end(delete_form) }}
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
